 <div class="container mt-5">
    <h1 class="text-center mb-4">Rentals List</h1>
    <div class="row text-center ">
      <% @rentals.each do |rental| %>
        <div class="col-md-6 mb-5">
          <div class="card">
            <div class="card-header bg-success text-white">
              <%= rental.vehicle.model %>
            </div>
            <div class="card-body">
              <p><strong>Start Date:</strong> <%=rental.start_time.strftime("%B %d, %Y") %></p>
              <p><strong>End Date:</strong> <%=rental.end_time.strftime("%B %d, %Y")%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
