<h1>HOMEPAGE</h1>

<div data-controller="toggle" class="mt-5">
  <button data-action="click->toggle#fire" class="btn btn-outline-primary">Add a car to rent</button>
  <div data-toggle-target="togglableElement" class="d-none">
    <%= render "form", vehicle: @vehicle %>
  </div>
</div>



<% @vehicles.each do |vehicle| %>
<div class="mx-auto p-2" style="width: 200px;" >
  <div class="card rounded-5"  style="width: 30rem; height: 20rem;" >
    <img src= 'https://showme0-9071.kxcdn.com/files/615692/pictures/thumbs/1399770/last_thumb1392620933.jpg' class="card-img-top-middle" alt="..." style="width:10rem; height:10rem">
    <div class="card-body">
      <h5 class="card-model">
         <%= vehicle.model%>
      </h5>
      <p class ="card-transmission">
        <%= vehicle.transmission%>
      </p>
      <p class ="card-power_source">
        <%= vehicle.power_source %>
      </p>
      <p class ="card-power_source">
        <%= link_to "Rent this car", vehicle_path(vehicle.id)%>
      </p>
    </div>
  </div>
</div>
<% end %>
