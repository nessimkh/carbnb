<h1 class="display-1 text-center">Welcome to CarBNB</h1>



<div class="container">
  <% @vehicles.each_slice(3) do |vehicles| %>
    <div class="row row-col-3 g-2">
      <%vehicles.each do |vehicle|%>
        <div class="col mx-auto car-card p-3">
          <div class="card rounded-5">
            <img src= 'https://showme0-9071.kxcdn.com/files/615692/pictures/thumbs/1399770/last_thumb1392620933.jpg' class="card-img-top-middle" alt="..." style="width:10rem; height:10rem">
            <div class="card-body">
              <h5 class="card-model">
                <%= vehicle.model%>
              </h5>
              <div class="text_styling">
                <p class ="card-transmission">
                  <%= vehicle.transmission%>
                </p>
              </div>
              <p class ="card-poweource">
                <%= vehicle.power_source %>
              </p>
              <p class ="card-power_source">
                <%= link_to "See details", vehicle_path(vehicle.id)%>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
